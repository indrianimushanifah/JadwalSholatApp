<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="270dp">

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="420dp"
            android:layout_height="221dp"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />


        <Button
            android:id="@+id/btn_produk"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/padding_layout"
            android:textStyle="bold"
            android:layout_width="381dp"

            android:layout_height="138dp"
            android:background="@mipmap/halal"
            android:text="Produk halal" />

        <Button
            android:id="@+id/btn_doa_harian"
            android:layout_width="381dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="@dimen/padding_layout"
            android:paddingBottom="@dimen/padding"
            android:layout_height="138dp"
            android:background="@mipmap/tangandoa"
            android:text="doa harian" />

        <Button
            android:id="@+id/btn_solat"
            android:layout_width="381dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="@dimen/padding_layout"
            android:layout_height="138dp"
            android:background="@mipmap/sholatlah"
            android:text="Jadwal Solat" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>